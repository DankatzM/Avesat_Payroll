# Avesat Payroll System Environment Configuration
# Copy this file to .env and update with your cPanel database credentials

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_cpanel_db_username
DB_PASSWORD=your_cpanel_db_password
DB_DATABASE=your_database_name
DB_PORT=3306

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
SESSION_TIMEOUT=3600

# Application Settings
APP_NAME=Avesat Payroll System
APP_URL=https://yourdomain.com
APP_ENV=production

# Company Information
COMPANY_NAME=Avesat Systems Ltd
COMPANY_ADDRESS=Nairobi, Kenya
COMPANY_EMAIL=info@avesat.com

# Mail Configuration (if using email features)
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls

# System Settings
TIMEZONE=Africa/Nairobi
DEFAULT_CURRENCY=KES
TAX_YEAR=2025
PERSONAL_RELIEF=28800
WORKING_DAYS_PER_MONTH=22

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=300

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Debug Settings (set to false in production)
DEBUG_MODE=false
LOG_LEVEL=error
